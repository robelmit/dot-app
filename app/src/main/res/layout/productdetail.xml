<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Sold"
        android:textColor="#03A9F4"
        android:layout_gravity="center"
        android:textSize="18dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_gravity="center"
        android:textColor="#03A9F4"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/box"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart"
        android:padding="20dp" >
        <TableRow>
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="item name"
                />
            <TextView
                android:id="@+id/name"
                android:padding="5dp"
                android:background="#4D009688"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profit" />

        </TableRow>

        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="number of item" />
            <TextView
                android:padding="5dp"
                android:background="#4D009688"
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100000" />

        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product cost" />
            <TextView
                android:padding="5dp"
                android:id="@+id/productcost"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />

        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selling price" />
            <TextView
                android:padding="5dp"
                android:id="@+id/selling"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAE8FC"
                android:padding="5dp"
                android:text="total cost" />
            <TextView
                android:padding="5dp"
                android:id="@+id/price"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
        </TableRow>
        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAE8FC"
                android:padding="5dp"
                android:text="total price" />

            <TextView
                android:padding="5dp"
                android:id="@+id/cost"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="gross profit" />

            <TextView
                android:padding="5dp"
                android:id="@+id/gross"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description" />
            <TextView
                android:padding="5dp"
                android:id="@+id/description"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
        </TableRow>
    </TableLayout>
    <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"/>
    -->

</LinearLayout>