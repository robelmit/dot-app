<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi sir Welcome"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="Please enter your name of your plsp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/slide_desc" />

        <EditText
            android:padding="5dp"
            android:layout_margin="20dp"
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edback"
            android:ems="10"
            android:hint="Enter your name here"
            android:inputType="textPersonName"
            android:textColorLink="@android:color/white" />
        <Button
            android:id="@+id/button"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Save Name"
            android:textColor="#fff"
            android:background="@drawable/generate"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="17dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usphoto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Please add your own logo below"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/upload"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Upload"
            android:textColor="#fff"
            android:background="@drawable/generate"/>

    </LinearLayout>
<Button
    android:id="@+id/proceed"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textColor="#fff"
    android:textAllCaps="false"
    android:text="Save and Proceed"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/generate"/>
</LinearLayout>