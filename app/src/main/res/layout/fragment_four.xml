<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anytime Analytics"
        android:textSize="20dp"
        android:textColor="@color/b"
        android:gravity="center"
        android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/text"
        android:id="@+id/robiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/from"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="from"
                android:background="@drawable/generate"/>
            <Button
                android:id="@+id/to"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
               android:textColor="#fff"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="to"
                android:background="@drawable/generate"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/robiro"
        android:id="@+id/robiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000"
                android:id="@+id/text1"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""/>
            <TextView
                android:textColor="#000"
                android:id="@+id/text2"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/robiti"
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/generate"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:background="@drawable/generate"
            android:text="Generate"
            android:layout_width="100dp"
            android:layout_height="30dp"
            />
    </RelativeLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_below="@id/rela"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/chart"
        />
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart"
        android:paddingLeft="10dp"
        android:id="@+id/video"
        android:paddingRight="10dp" >
        <TableRow  >
            <TextView
                android:padding="5dp"
                android:background="#0079D6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type"
                android:textColor="#fff"/>
            <TextView
                android:padding="5dp"
                android:background="#4CAF50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profit"
                android:textColor="#fff"/>
            <TextView
                android:padding="5dp"
                android:background="#FF9800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expense"
                android:textColor="#fff"/>
            <TextView
                android:padding="5dp"
                android:background="#FF5722"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loss"
                android:textColor="#fff"/>
        </TableRow>

        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product" />
            <TextView
                android:padding="5dp"
                android:background="#4D009688"
                android:id="@+id/propro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100000" />
            <TextView
                android:background="#4BFFEB3B"
                android:padding="5dp"
                android:id="@+id/proexp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10002" />
            <TextView
                android:background="#60FF5722"
                android:padding="5dp"
                android:id="@+id/proloss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40000" />
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Service" />
            <TextView
                android:padding="5dp"
                android:id="@+id/serpro"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
            <TextView
                android:padding="5dp"
                android:background="#4BFFEB3B"
                android:id="@+id/serexp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000" />
            <TextView
                android:padding="5dp"
                android:id="@+id/serloss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40000"
                android:background="#60FF5722"
                />
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="#A39D9D"/>
        <TableRow >
            <TextView
                android:padding="5dp"
                android:background="#DAE8FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total" />
            <TextView
                android:padding="5dp"
                android:id="@+id/totp"
                android:background="#4D009688"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10000" />
            <TextView
                android:padding="5dp"
                android:background="#4BFFEB3B"
                android:id="@+id/tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000" />
            <TextView
                android:padding="5dp"
                android:id="@+id/totl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40000"
                android:background="#60FF5722"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>